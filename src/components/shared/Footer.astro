---
import type { Language } from "../../models/Translatable";
import FacebookLogo from "../../assets/FacebookLogo.astro";
import TwitterLogo from "../../assets/TwitterLogo.astro";
import InstagramLogo from "../../assets/InstagramLogo.astro";
import LinkedInLogo from "../../assets/LinkedInLogo.astro";
import { navLinks } from "../../data/navLinks";

interface Props {
  language: Language;
}

const { language } = Astro.props;
---

<footer class="bg-primary text-light font-medium p-6">
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-6">
    <div class="lg:justify-self-end">
      <div class="mb-3">
        <span class="text-lg mr-3">
          {
            language === "es"
              ? "¡Prueba nuestra aplicación!"
              : "Ready to use our app?"
          }
        </span>
        <a
          href="https://app.integradis.shop/register"
          target="_blank"
          aria-label={`${language === "es" ? "Ir a" : "Go to"} greenhouse app`}
          class="border-accent text-light hover:bg-accent hover:text-light duration-300 border-2 rounded-full px-4 py-2"
        >
          {language === "es" ? "Registro" : "Sign up"}
        </a>
      </div>
      <div class="flex items-center gap-4">
        <a
          class="hover:scale-90 duration-300"
          href="https://www.facebook.com/greenhouse/"
          target="_blank"
          aria-label={`${language === "es" ? "Ir a" : "Go to"} facebook`}
          referrerpolicy="no-referrer"
        >
          <FacebookLogo class="h-8 w-8 text-light" />
        </a>
        <a
          class="hover:scale-90 duration-300"
          href="https://twitter.com/greenhouse/"
          target="_blank"
          aria-label={`${language === "es" ? "Ir a" : "Go to"} twitter`}
          referrerpolicy="no-referrer"
        >
          <TwitterLogo class="h-7 w-7 text-light" />
        </a>
        <a
          class="hover:scale-90 duration-300"
          href="https://www.instagram.com/greenhouse/"
          target="_blank"
          aria-label={`${language === "es" ? "Ir a" : "Go to"} instragram`}
          referrerpolicy="no-referrer"
        >
          <InstagramLogo class="h-6 w-6 text-light" />
        </a>
        <a
          class="hover:scale-90 duration-300"
          href="https://www.linkedin.com/in/greenhouse/"
          target="_blank"
          aria-label={`${language === "es" ? "Ir a" : "Go to"} linkedin`}
          referrerpolicy="no-referrer"
        >
          <LinkedInLogo class="h-6 w-6 text-light" />
        </a>
      </div>
    </div>
    <div class="lg:justify-self-center">
      <strong class="font-bold uppercase text-light">
        {language === "es" ? "Enlaces de interés" : "Useful links"}
      </strong>
      <div class="grid grid-cols-2 gap-x-4">
        {
          navLinks[language].map((link) => (
            <a
              class="hover:text-gray-400"
              aria-label={`${language === "es" ? "Ir a" : "Go to"} ${link.label}`}
              href={link.destination}
            >
              {link.label}
            </a>
          ))
        }
      </div>
    </div>
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-1 md:col-span-2 lg:col-span-1"
    >
      <div class="mb-4">
        <strong class="font-bold uppercase text-light">Legal</strong>
        <a
          href={language === "es"
            ? "/politicas-de-privacidad"
            : "/privacy-policy"}
          aria-label={`${language === "es" ? "Ir a política de privacidad" : "Go to privacy policy"}`}
          class="block hover:text-gray-400"
        >
          {language === "es" ? "Política de privacidad" : "Privacy policy"}
        </a>
        <a
          href={language === "es"
            ? "/Términos y condiciones"
            : "/terms-and-conditions"}
          aria-label={`${language === "es" ? "Ir a términos y condiciones" : "Go to terms and conditions"}`}
          class="block hover:text-gray-400"
        >
          {
            language === "es"
              ? "Términos y condiciones"
              : "Terms and conditions"
          }
        </a>
      </div>
      <div>
        <strong class="font-bold uppercase text-light">
          {language === "es" ? "Contacto" : "Contact"}
        </strong>
        <a
          href="mailto:greenhouse-info@gmail.com"
          target="_blank"
          referrerpolicy="no-referrer"
          aria-label={`${language === "es" ? "Enviar correo electrónico" : "Send email"}`}
          class="block"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-6 h-6 inline mr-1.5"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75"
            ></path>
          </svg>
          <span>greenhouse-info@gmail.com</span>
        </a>
        <div class="block">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke-width="1.5"
            stroke="currentColor"
            class="w-6 h-6 inline mr-1"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z"
            ></path>
          </svg>
          <span>+51 909 420 069</span>
        </div>
      </div>
    </div>
  </div>
  <p class="text-center">
    Greenhouse &copy; 2024. {
      language === "es"
        ? "Todos los derechos reservados"
        : "All rights reserved"
    }.
  </p>
</footer>
