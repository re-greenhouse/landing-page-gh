---
import type { PricingPlan } from "../../models/PricingPlan";

interface Props {
  plan: PricingPlan;
}

const { plan } = Astro.props;
---

<div
  class="grid grid-cols-1 md:grid-cols-[auto_auto_auto] bg-white rounded-2xl drop-shadow-lg"
>
  <div
    class="flex flex-col justify-center bg-primary w-72 md:w-60 text-light rounded-2xl md:rounded-r-none p-6 gap-3"
  >
    <h3 class="text-center font-bold text-xl">{plan.title}</h3>
    <p class="text-center text-4xl font-bold">
      <span class="text-light">S/. </span>{plan.monthlyPrice}<span
        class="text-sm">/mes</span
      >
    </p>
  </div>
  <ul class="flex flex-col justify-center items-start gap-2 w-72 lg:w-80 p-6">
    {
      plan.features.map((feature) => (
        <li class="grid grid-cols-[auto_1fr] items-center gap-1">
          <svg
            class="inline self-start"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <>
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" />
              <path d="m9 11 3 3L22 4" />
            </>
          </svg>
          <span>{feature}</span>
        </li>
      ))
    }
  </ul>
  <a
    href="https://app-greenhouse.netlify.app/register"
    aria-label="Go to sign-up"
    target="_blank"
    referrerpolicy="no-referrer"
    class="flex justify-center items-center bg-accent hover:bg-opacity-75 rounded-b-2xl md:rounded-bl-none md:rounded-r-2xl h-full px-4 py-2"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="2.0"
      stroke="currentColor"
      class="w-6 h-6 text-primary"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="m5.25 4.5 7.5 7.5-7.5 7.5m6-15 7.5 7.5-7.5 7.5"></path>
    </svg>
  </a>
</div>
